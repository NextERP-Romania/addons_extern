<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_inventory_cost_value" inherit_id="stock.report_inventory">
        <xpath expr="//table[.//span[@t-field='line.product_qty']]/thead/tr" position="inside">
            <th class="text-right"><strong>Price Unit</strong></th>
            <th class="text-right"><strong>Inventory Cost</strong></th>
        </xpath>
        <xpath expr="//tr[.//span[@t-field='line.product_qty']]" position="inside">
            <td class="text-right"><span t-field="line.price_unit"/></td>
            <td class="text-right"><span t-field="line.inventory_cost"/></td>
        </xpath>
    </template>
</odoo>
