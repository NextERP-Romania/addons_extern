<odoo>
    <record id="force_accounting_date_picking" model="ir.ui.view">
        <field name="name">force_accounting_date_picking</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock_account.stock_valuation_layer_picking" />
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_view_stock_valuation_layers']" position="before">
                <button string="Force Accounting Date" type="object"
                    name="force_accounting_date"
                    class="oe_stat_button" groups="stock.group_stock_manager"
                    icon="fa-calendar" style="font-size: 11px;"               
                    attrs="{'invisible': [('state', 'not in', ['done'])]}" >
                </button>
            </xpath>
        </field>
    </record>
</odoo>