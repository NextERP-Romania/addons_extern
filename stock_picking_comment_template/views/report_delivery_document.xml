<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_delivery_document_comments"
              inherit_id="stock.report_delivery_document">
        <xpath expr="//table[hasclass('table-sm')]" position="before">
            <p t-if="o.get_comment_template('before_lines', o.partner_id.id)">
                <span t-raw="o.get_comment_template('before_lines', o.partner_id.id).text"/>
            </p>
        </xpath>
        <xpath expr="(//p)[position()=last()]" position="after">
            <p t-if="o.get_comment_template('after_lines', o.partner_id.id)">
                <span t-raw="o.get_comment_template('after_lines', o.partner_id.id).text"/>
            </p>
        </xpath>
    </template>

</odoo>
