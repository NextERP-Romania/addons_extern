<odoo>

	<report id="print_report_html"
	        	string="Invoice Lines Wizard Report"
	        	model="invoice.lines.wizard"
	        	report_type="qweb-html"
	        	name="invoice_lines_report_period.invoice_lines_html_report"
	        	file="invoice_lines.html"
	        	menu="False"/>

	<report id="print_report_xlsx"
	        	string="Invoice Lines Wizard Report"
	        	model="invoice.lines.wizard"
	        	report_type="xlsx"
	        	name="invoice_lines_report_period.invoice_lines_xlxs"
	        	file="invoice_lines.xlsx"
	        	menu="False"/>



     <template id="invoice_lines_html_report">
     		<t t-call="web.html_container">
                    <h2>
                        Report <span t-esc="date_from"/><![CDATA[&nbsp;]]><![CDATA[&nbsp;]]>-<![CDATA[&nbsp;]]><![CDATA[&nbsp;]]><span t-esc="date_to"/> 
                    </h2>
                     <div t-if="filters" class="row mt32 mb32">
                        <div class="col-auto" name="div_origin">
                            <p t-esc="filters"/>
                        </div>
                    </div>
                      <table class="table table-sm"  name="stock_move_table">
                        <thead>
                            <tr>
                                <th name="th_sm_product"><strong>Nr</strong></th>
                                <th name="th_sm_product"><strong>Product</strong></th>
                                <th name="th_sm_product"><strong>Product code</strong></th>
                                <th name="th_sm_product"><strong>Client</strong></th>
                                <th name="th_sm_product"><strong>Invoice date</strong></th>
                                <th name="th_sm_product"><strong>Invoice nr.</strong></th>
                                <th name="th_sm_product"><strong>Price</strong></th>
                                <th name="th_sm_product"><strong>Currency</strong></th>
                                <th name="th_sm_quantity"><strong>Quantity</strong></th>
                                <th name="th_sm_product"><strong>Price no VAT</strong></th>
                                <th name="th_sm_product"><strong>VAT</strong></th>
                            </tr>
                        </thead>
                        <tbody>
		   				    <t t-set="counter" t-value="0"/>
                            <tr t-foreach="lines" t-as="l">
                            	<t  t-set="counter" t-value="counter + 1"/>
                                <td>  <span t-esc="counter"/></td>
                                <td> <span t-field="l.product_id"/></td>
                                <td> <span t-field="l.product_id.default_code"/></td>
                                <td> <span t-field="l.partner_id"/> </td>
                                <td> <span t-field="l.move_id.invoice_date"/> </td>
                                <td> <span t-field="l.move_id.name"/> </td>
                                <td> <span t-field="l.price_unit"/> </td> <!-- must be also the dicount?-->
                                <td> <t t-if="l.currency_id"><span t-field="l.currency_id"/> </t>
                                	 <t t-if="not l.currency_id"><span t-field="l.company_id.currency_id"/> </t>
                                </td>
                                <td> <span t-field="l.quantity"/> </td>
                                <td> <span t-esc="l.price_subtotal"/> </td> <!-- t-field is giving x lei -->
                                <td> <span t-esc="l.tax_base_amount"/> </td> 
                            </tr>
                        </tbody>
                    </table>
              </t>

    </template>


</odoo>
